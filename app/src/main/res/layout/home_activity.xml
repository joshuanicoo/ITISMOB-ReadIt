<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.homepage.HomeActivity">

    <LinearLayout
        android:id="@+id/mainContentLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <SearchView
            android:id="@+id/bookSv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bkg"
            android:focusable="false"
            app:closeIcon="@drawable/baseline_clear_24"
            app:iconifiedByDefault="false"
            app:queryHint="Title, Author or ISBN"
            app:searchHintIcon="@null"
            app:searchIcon="@drawable/baseline_search_24"
            android:paddingVertical="6dp"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookListRv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            tools:listitem="@layout/books_card_layout" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavBar"
        android:layout_width="280dp"
        android:layout_height="70dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/navSavedBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_bookmark"
                android:contentDescription="Saved Books"
                android:scaleType="centerInside"
                android:padding="6dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/navScanBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_scanner"
                app:backgroundTint="@color/main_green"
                app:maxImageSize="28dp"
                app:tint="@color/white"
                android:layout_marginHorizontal="12dp"
                android:elevation="10dp" />

            <ImageButton
                android:id="@+id/navProfileBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_person"
                android:contentDescription="Profile"
                android:scaleType="centerInside"
                android:padding="6dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
